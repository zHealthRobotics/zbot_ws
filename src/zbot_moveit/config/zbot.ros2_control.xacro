                  <param name="initial_value">${initial_positions['RWY_joint']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="LGRF_joint">
                <command_interface name="position"/>
                
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['LGRF_joint']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="RGRF_joint">
                <command_interface name="position"/>
                
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['RGRF_joint']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>

        </ros2_control>
    </xacro:macro>
</robot>
